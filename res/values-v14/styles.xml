<resources>

    <style name="Header1" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="Header2" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="RightColumnValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">3dip</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="WarfarinDayStyle">
        <item name="android:textColor">@color/dark_cyan</item>
    </style>

    <style name="WarfarinDayColumnStyle">
        <item name="android:textColor">@color/darker_still_cyan</item>
    </style>

    <style name="WarfarinDoseColumnStyle">
        <item name="android:textColor">@color/fire_red</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

</resources>