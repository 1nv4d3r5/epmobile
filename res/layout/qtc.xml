<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:background="@color/background"
	android:layout_height="match_parent" android:orientation="vertical">
	<TextView android:text="@string/qtc_label"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_gravity="center" android:layout_marginBottom="25dip"
		android:textSize="24.5sp" />
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content">
		<TextView android:id="@+id/textView1" android:text="@string/rr_label"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/rrEditText" android:text=""
			android:hint="@string/rr_hint"
			android:inputType="number"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1"></EditText>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout2" android:layout_height="wrap_content">
		<TextView android:id="@+id/textView2" android:text="@string/qt_label"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/qtEditText" android:layout_width="wrap_content"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:text="" android:hint="@string/qt_hint"
			android:inputType="number"></EditText> 
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout3" android:layout_height="wrap_content">
		<Button android:text="@string/calculate_label" android:id="@+id/calculate_qtc_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1"></Button>
		<TextView android:id="@+id/calculated_qtc" android:text="@string/qtc_result_label"
			android:textSize="20sp"
			android:textColor="@color/neutral_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1"></TextView>
		<Button android:text="@string/clear_label" android:id="@+id/clear_button" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"></Button>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout4" android:layout_height="wrap_content">
	</LinearLayout>
</LinearLayout>
