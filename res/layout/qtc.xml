<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:background="@color/background"
	android:layout_height="match_parent"
	android:stretchColumns="*"
	>
	<TableRow>
		<Spinner android:id="@+id/interval_rate_spinner"></Spinner>
		<EditText android:id="@+id/rrEditText" android:text=""
			android:hint="@string/rr_hint"
			android:inputType="number">
		</EditText>
	</TableRow>
	<TableRow >
		<TextView android:id="@+id/textView2" android:text="@string/qt_label"
			android:textAppearance="?android:attr/textAppearanceMedium" 
			></TextView>
		<EditText android:id="@+id/qtEditText" 
			android:text="" android:hint="@string/qt_hint"
			android:inputType="number">
		</EditText> 
	</TableRow>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout3" android:layout_height="wrap_content">
		<Button android:text="@string/calculate_label" android:id="@+id/calculate_qtc_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			></Button>
		<TextView android:id="@+id/calculated_qtc" android:text="@string/qtc_result_label"
			android:textSize="20sp"
			android:textColor="@color/neutral_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1"></TextView>
		<Button android:text="@string/clear_label" android:id="@+id/clear_button" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"></Button>
	</LinearLayout>
	<TextView android:id="@+id/qtc_formula"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:textAppearance="?android:attr/textAppearanceMedium" 
			android:layout_height="wrap_content"></TextView>
</TableLayout>
